Name: Slack
Description: Task trigger provider for Slack
Metadata: envVars: OBOT_SLACK_TRIGGER_PROVIDER_BOT_TOKEN,OBOT_SLACK_TRIGGER_PROVIDER_APP_TOKEN,OBOT_SLACK_TRIGGER_PROVIDER_SIGNING_SECRET
Metadata: noUserAuth: slack-trigger-provider
Credential: ../placeholder-credential as slack-trigger-provider

#!sys.daemon /usr/bin/env npm --prefix ${GPTSCRIPT_TOOL_DIR} run start

---
!metadata:Slack:providerMeta
{
    "icon": "/admin/assets/slack_icon_small.svg",
    "iconDark": "/admin/assets/slack_icon_small.svg",
    "link": "https://api.slack.com/apps",
    "obotScopes": [
        "tasks:manage"
    ],
    "envVars": [
        {
            "name": "OBOT_SLACK_TRIGGER_PROVIDER_BOT_TOKEN",
            "friendlyName": "Bot Token",
            "description": "Bot token for the Slack app. Can typically be found in Slack App Dashboard > Bot Token",
            "sensitive": true
        },
        {
            "name": "OBOT_SLACK_TRIGGER_PROVIDER_APP_TOKEN",
            "friendlyName": "App Token",
            "description": "App token for the Slack app. Can typically be found in Slack App Dashboard > App Token",
            "sensitive": true
        },
        {
            "name": "OBOT_SLACK_TRIGGER_PROVIDER_SIGNING_SECRET",
            "friendlyName": "Signing Secret",
            "description": "Signing secret for the Slack app. Can typically be found in Slack App Dashboard > Signing Secret",
            "sensitive": true
        }
    ]
}


